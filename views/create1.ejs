<body>
    <div class="card">
        
        <div class="card-header text-center">Enter New Company</div>
        <div class="card-body">
           <form action="/create1" method="POST">
                <div class="form-group">
                    <label for="c_name">Company Name</label>
                    <input type="text" class="form-control" id="c_name" name="company_name" placeholder="Enter name of company">
    
                </div>
                <div class="form-group">
                    <label for="mcap">Market Cap</label>
                    <input type="number" class="form-control" id="mcap" name="mkt_cap" placeholder="market capital of company">
                    
                </div>
               
                <div class="form-group">
                    <label for="md_ceo">MD/CEO</label>
                    <input type="text" class="form-control" id="md_ceo" name="md_ceo" placeholder="CEO of company">
                    
                </div>
                <div class="form-group">
                    <label for="bidprice">Bidding Price</label>
                    <input type="text" class="form-control" id="bidprice" name="bid_price" placeholder="enter current bidding price">
                    
                </div>
                <button type="submit" class="btn btn-primary">Enter</button>
                </form>
        </div>
    </div>    
        
    <script src="C:\bootstrap-5.2.3-dist\js\bootstrap.min.js"></script>
</body>
